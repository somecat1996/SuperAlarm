<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_self_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="superalarm.firsttry.SelfInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人信息完善"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/compleInfo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textSize="26sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:id="@+id/NickName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不超过8字符"
        android:textSize="16sp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="90dp"/>

    <EditText
        android:id="@+id/EtxtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入昵称"
        android:layout_marginTop="80dp"
        android:layout_marginStart="48dp"
        style="@style/Widget.AppCompat.EditText"
        android:textColor="@android:color/white"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textSize="26sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp" />

    <ImageButton
        android:id="@+id/sexualmale"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_marginTop="190dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/male"/>

    <ImageButton
        android:id="@+id/sexualfemale"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_marginTop="190dp"
        android:layout_marginStart="120dp"
        android:src="@drawable/female"/>

    <ImageButton
        android:id="@+id/sexualnone"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_marginTop="190dp"
        android:layout_marginStart="200dp"
        android:src="@drawable/maorfe"/>

    <Button
        android:id="@+id/EnsureInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:background="?attr/colorControlHighlight"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="61dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold" />

</RelativeLayout>
