<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_zero_margin"
    android:paddingLeft="@dimen/activity_zero_margin"
    android:paddingRight="@dimen/activity_zero_margin"
    android:paddingTop="@dimen/activity_zero_margin"
    tools:context="superalarm.firsttry.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码设置"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="94dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="220dp" />

    <EditText
        android:id="@+id/InputEmail"
        android:inputType="textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="输入邮箱"
        android:lines="1"
        android:layout_marginTop="40dp"
        android:layout_marginStart="80dp"/>

    <EditText
        android:id="@+id/InputPassWord"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="输入密码"
        android:lines="1"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="150dp"
        android:layout_marginStart="80dp"/>

    <EditText
        android:id="@+id/RePassWord"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="确认密码"
        android:lines="1"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="250dp"
        android:layout_marginStart="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（密码不少于8位，使用数字、字母组合）"
        android:textSize="14sp"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="129dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/ToRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认 注册"
        android:background="?attr/colorControlHighlight"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignParentStart="true" />

</RelativeLayout>
