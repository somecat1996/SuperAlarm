<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_groupsearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="superalarm.firsttry.Groupsearch">

    <EditText
        android:id="@+id/searchBoxGroup"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:hint="    输入小组ID"
        android:textColorHint="@color/grey"
        android:textSize="25sp"
        android:background="@android:drawable/edit_text" />

    <Button
        android:id="@+id/searchGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textColor="@color/dot_dark_screen2"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:layout_marginTop="260dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonLookUpGroup"
        android:text="查看此小组群"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textGroupSearchResult"
        android:background="#FF99FF99"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/textGroupSearchResult"
        android:text="用户名：xxxxxxx \n用户id：xxxxxxxx \n（左侧应有头像）"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />


</RelativeLayout>
